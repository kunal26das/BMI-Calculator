<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:columnCount="4"
    android:orientation="vertical"
    android:rowCount="4">

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="7" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="4" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="1" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="0" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="8" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="5" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="2" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="9" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="6" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="3" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="." />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="AC"
            android:textColor="@color/colorAccent" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:background="@drawable/border">

        <TextView
            style="@style/NumPadText"
            android:gravity="center"
            android:text="X" />
    </FrameLayout>

    <FrameLayout
        style="@style/NumPadButton"
        android:layout_rowSpan="2"
        android:layout_rowWeight="2"
        android:background="@color/colorAccent">

        <TextView
            style="@style/NumPadText"
            android:text="GO"
            android:textColor="@color/white" />
    </FrameLayout>

</GridLayout>